<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20sp"
    android:orientation="vertical"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="15dp"
       android:orientation="vertical"
       android:id="@+id/formlinearliyout"
       android:visibility="gone"
       >
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="firstname"
          android:id="@+id/firstnamedittext"
          android:textSize="20sp"
          />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="lastname"
           android:id="@+id/lastnamedittext"
           android:textSize="20sp"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="email"
           android:id="@+id/emailedittext"
           android:textSize="20sp"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="phone"
           android:id="@+id/phoneedittext"
           android:textSize="20sp"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="age"
           android:id="@+id/ageedittext"
           android:textSize="20sp"
           android:inputType="number"
           />
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/addButton"
           android:text="hozzáad"
           android:textSize="20sp"
           />
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/cancelButton"
           android:text="Mégse"
           android:textSize="20sp"
           />
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/modifyButton"
           android:text="modositás"
           android:textSize="20sp"
           />
   </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showFormButton"
        android:text="Ember hozzáadás"
        android:textSize="20sp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Listwiew"/>

</LinearLayout>